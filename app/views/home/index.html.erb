<script type="text/x-handlebars" data-template-name="task_lists">
  <p> Wowowwo its works: {{siteName}}</p>
  <p>{{#link-to 'task_lists.new'}}new record{{/link-to}}</p>
  {{outlet}}
  {{#each }}
    <p>{{#link-to 'task_list' this}}{{name}}{{/link-to}}</p>
    <ul>
      {{#each task in task_ids}}
        <li>{{task.description}}</li>
      {{/each}}
      {{render 'newTask' this}}
    </ul>
  {{/each}}
</script>



<script type="text/x-handlebars" data-template-name="task_lists/new">
  <form rol="newTaskListCreation">
    <p>{{view Ember.TextField valueBinding="listName" placeholder="Put your list name"}}</p>
    <button type="submit" {{action 'createList'}}>Submit</button>
  </form>
</script>



<script type="text/x-handlebars" data-template-name="task_list">
  <p>{{name}}</p>
  {{ render 'tasks' this.task_ids }}
  <p>{{#link-to 'task_lists.newTask' this}}New task{{/link-to}}</p>
</script>



<script type="text/x-handlebars" data-template-name="newTask">
  <form rel="newTaskCreation">
    <p>{{view Ember.TextField valueBinding="taskName" placeholder="Your new task.."}}</p>
    <button type="submit" {{action 'createTask'}}>Submit</button>
  </form>
</script>



